#!/bin/sh

#File generated by 'installJavAct'

JAVACT_HOME=/home/risky/ENAC/IENAC15_3EME_ANNEE_ET_MASTER_RO/SYS_DISTRIBUES/JavAct/JavActv153/src
echo "Compiling JavAct ..."
OLD_DIR=`pwd`
cd $JAVACT_HOME
javac *.java javact/*/*.java javact/*/*/*.java
echo "Compiling Creator for RMI ..."
rmic  -classpath $JAVACT_HOME org.javact.net.rmi.Creator
echo "Compiling ReceiveCt for RMI ..."
rmic  -classpath $JAVACT_HOME org.javact.net.rmi.ReceiveCt
echo "Compiling ClientSideAnswerBackImpl for RMI ..."
rmic  -classpath $JAVACT_HOME org.javact.net.rmi.ClientSideAnswerBackImpl
echo "Building javact.jar..."
jar cvfm javact.jar manifest.txt javact/*/*.class javact/*/*/*.class
mv javact.jar ../
rm -f javact/compiler/*.class
rm -f javact/lang/*.class
rm -f javact/local/*.class
rm -f javact/util/*.class
rm -f javact/net/rmi/*.class
cd $OLD_DIR
echo "Done !"
